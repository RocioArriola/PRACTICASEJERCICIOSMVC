@model PRACTICASEJERCICIOS.APPMVCCodeFirst.Models.Alumno

@{
    ViewData["Title"] = "Editar";
}

<h1 style="font-family:Cambria"><b>Editar un registro de alumno!!</b></h1>


<h4 class="text-secondary">Alumno</h4>
<hr />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">

        <div class="form-group col-2">
            <label asp-for="Codigo" class="form-label fw-bold"></label>
            <input asp-for="Codigo" class="form-control shadow-sm" />
            <span asp-validation-for="Codigo" class="text-danger"></span>
        </div>

        <div class="form-group col-2">
            <label asp-for="Nombre" class="form-label fw-bold"></label>
            <input asp-for="Nombre" class="form-control shadow-sm" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
       
            </div>

            <div class="row">

        <div class="form-group col-4">
            <label asp-for="FechaNacimiento" class="form-label fw-bold"></label>
            <input asp-for="FechaNacimiento" class="form-control shadow-sm" />
            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="YearEstudio" class="form-label fw-bold"></label>
            <input asp-for="YearEstudio" class="form-control shadow-sm" />
            <span asp-validation-for="YearEstudio" class="text-danger"></span>
        </div>

            </div>
           
    <div class="row">
            <div class="form-group col-10">
            <label asp-for="Direccion" class="form-label fw-bold"></label>
            <input asp-for="Direccion" class="form-control shadow-sm" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group col-10">
            <label asp-for="Email" class="form-label fw-bold"></label>
            <input asp-for="Email" class="form-control shadow-sm" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
    </div>

            <hr />
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-secondary" /> |
        <a asp-action="Index" class="btn btn-dark">Regresar</a>
            </div>
        </form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
