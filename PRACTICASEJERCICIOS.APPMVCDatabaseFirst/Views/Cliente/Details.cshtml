@model PRACTICASEJERCICIOS.APPMVCDatabaseFirst.Models.Cliente

@{
    ViewData["Title"] = "Detalle";
}

<h1 class="display-4 text-center text-primary mb-4">Ver detalle de cliente!!</h1>

<div>
    <h4 class="text-secondary">Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 fw-bold text-dark">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10 border-bottom pb-2">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2 fw-bold text-dark">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd class="col-sm-10 border-bottom pb-2">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        <dt class="col-sm-2 fw-bold text-dark">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class="col-sm-10 border-bottom pb-2">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class="col-sm-2 fw-bold text-dark">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10 border-bottom pb-2">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-dark">Editar</a> |
    <a asp-action="Index" class="btn btn-info">Regresar</a>
</div>
