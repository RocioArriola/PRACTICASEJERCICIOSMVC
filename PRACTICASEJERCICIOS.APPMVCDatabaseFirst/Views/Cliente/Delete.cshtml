@model PRACTICASEJERCICIOS.APPMVCDatabaseFirst.Models.Cliente

@{
    ViewData["Title"] = "Eliminar";
}

<h1 class="display-4 text-center text-primary mb-4">Eliminar cliente!!</h1>

<h2>¿Estás seguro que deseas eliminar este cliente?</h2>
<div>
    <h4 class="text-secondary">Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 fw-bold text-dark">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10 border-bottom pb-2">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2 fw-bold text-dark">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd class="col-sm-10 border-bottom pb-2">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        <dt class="col-sm-2 fw-bold text-dark">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class="col-sm-10 border-bottom pb-2">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class="col-sm-2 fw-bold text-dark">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10 border-bottom pb-2">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">Regresar</a>
    </form>
</div>
